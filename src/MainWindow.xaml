<Window x:Class="GitHubLanguageStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitHubLanguageStats"
        mc:Ignorable="d"
        Title="GitHub Language Stats" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <ComboBox x:Name="repoFilter" SelectionChanged="RepoFilterUpdated" SelectedIndex="0" DockPanel.Dock="Top">
                <ComboBoxItem>All</ComboBoxItem>
            </ComboBox>
            <StackPanel x:Name="languageBar" Orientation="Horizontal" Height="20" DockPanel.Dock="Top">
            </StackPanel>
            <WrapPanel x:Name="languageList" Orientation="Horizontal">
            </WrapPanel>
        </DockPanel>
    </Grid>
</Window>
