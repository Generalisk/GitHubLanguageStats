<Window x:Class="GitHubLanguageStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitHubLanguageStats"
        mc:Ignorable="d"
        Title="GitHub Language Stats" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <Button x:Name="refreshButton" Content="Refresh" Click="RefreshButton_Click" DockPanel.Dock="Right" />
                <Popup x:Name="repoFilterDropdown" Placement="Bottom" StaysOpen="False">
                    <ListBox x:Name="repoFilter" SelectionMode="Multiple" SelectionChanged="RepoFilter_Updated" />
                </Popup>
                <Button x:Name="repoFilterDropdownBtn" Content="Repositories" HorizontalContentAlignment="Left" Click="RepoFilterDropdown_Click" />
            </DockPanel>
            <StackPanel x:Name="languageBar" Orientation="Horizontal" Height="20" DockPanel.Dock="Top" />
            <WrapPanel x:Name="languageList" Orientation="Horizontal" />
        </DockPanel>
    </Grid>
</Window>
